@model GamingGateStudios.Models.Ads_Clients

@{
    ViewBag.Title = "Data";
    Layout = "~/Areas/Operators/Views/Shared/_Layout.cshtml";
}
<div style="width:800px; margin:0 auto;">

    <h2>Your Data</h2>

    <div>
        <h4></h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Target_CPM)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Target_CPM)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                Num Of ADS
            </dt>
            <dd>
                @Model.ADS.Count
            </dd>
            <dt>
                Actual CPM
            </dt>
            <dd>
                @{
                    int Actual_CPM = Model.ADS.Select(x => x.CPM).Aggregate((a, b) => a + b);
                }
                @Actual_CPM
            </dd>
            <dt>
                Photo
            </dt>
            <dd>
                <img src="~/Uploads/AdsClients/@(Model.ID).JPG" alt="" width="500" height="300" />
            </dd>
        </dl>
    </div>
    </div>
