@model IQueryable<IGrouping<int?, GamingGateStudios.Models.Gamer>>
@{
    ViewBag.Title = "Gender";
    Layout = "~/Areas/Operators/Views/Shared/_Layout.cshtml";
}

<div style="width:90%; margin:0 auto;">
    <h2>Gender</h2>
    <div class="graph">
        <div class="tables" style="align-items:center">

            <table class="table table-bordered">
                <thead>
                    <tr style="align-items:center">
                        <th>#</th>
                        <th>Gender</th>
                        <th>Number Of Gamers</th>
                    </tr>
                </thead>
                <tbody style="align-items:center">
                    @{
                        int counter = 0;
                    }
                    @foreach (var item in Model.OrderByDescending(x => x.Count()))
                    {
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>
                                @if (item.Key == 1)
                                {
                                    <span>Male</span>
                                }else
                                {
                                    <span>Female</span>
                                }
                            </td>
                            <td>@item.Count()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

