@using GamingGateStudios.Models;
@{
    ViewBag.Title = SiteResource.Contact;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@{
    AD ad = DEL.GetAD(728, 90);
    if (ad != null)
    {
        if (ad.Link != null)
        {
            <div style="margin-left:20%;margin-right:20%">
                <a href="~/Home/ADClick/@ad.ID" target="_blank"><img src="~/Uploads/ADS/@(ad.ID).jpg" /></a>
            </div>
        }
        else
        {
            <div style="margin-left:20%;margin-right:20%">
                <img src="~/Uploads/ADS/@(ad.ID).jpg" />
            </div>
        }
    }
}
<!-- Games Page Starts here -->
<div class="games">
    <div class="container">
        <div class="page-path">
            <ul class="path-list">
                <li><a href="index.html"></a></li>
                <li class="act"></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="contact">
            <h3 class="page-header"></h3>
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12071.681938475434!2d-93.25993179999999!3d40.851669550000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87e9175fdc81fa0f%3A0x3e508b796d85b60e!2sNew+York%2C+IA+50238%2C+USA!5e0!3m2!1sen!2sin!4v1418810233989" frameborder="0" style="border:0"></iframe>
            </div>
            <div class="contact-box">
                <form action="~/Home/Contact" method="post">
                    @Html.AntiForgeryToken()
                    <div class="text">
                        <input type="text" placeholder="@SiteResource.FName" name="FName" required="Required" />
                        <input type="text" placeholder="@SiteResource.LName" name="LName" required="Required" />
                        <input type="text" placeholder="@SiteResource.Email" name="Email" required="Required" />
                    </div>
                    <div class="text">
                        <textarea placeholder="@SiteResource.Message" name="Message" required="Required"></textarea>
                    </div>
                    <div class="text-but">
                        <input type="submit" value="submit" />
                    </div>
                </form>
            </div>
            <div class="address-box">
                <h3 class="page-header">Address</h3>
                <h4>It is a long established fact that a reader will be distracted</h4>
                <p>Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here',</p>
                <p>Lorem Ipsum is that it has a more-or-less normal distribution of letters,that it has a more-or-less normal distribution as opposed to using 'Content here, content here',</p>
                <a href="mailto:example@email.com">123example@email.com</a>
                <p>+001 111 9999 99</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

