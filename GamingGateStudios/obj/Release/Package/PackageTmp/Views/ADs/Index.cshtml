@model IEnumerable<GamingGateStudios.Models.AD>

@{
    ViewBag.Title = "ADS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ADS</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ads_Clients.Name)
        </th>
        <th>
            CPM
        </th>
        <th>
            Click
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ads_Clients.Name)   @Html.DisplayFor(modelItem => item.Ads_Clients.Agency.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Click)
        </td>
        <td>
            @if (item.Ads_Clients.Agency_ID == null)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.ID });<span> |</span> 
            }
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
