@model GamingGateStudios.Models.Gamer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.UserName Details</h2>

<div>
    <h4>Gamer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Member)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Member)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        @if (Model.Gender == 1)
        {
            <dd>Male</dd>
        }
        else
        {
            <dd>Female</dd>}

        <dt>
            @Html.DisplayNameFor(model => model.Points)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Points)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tries)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tries)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mony_Send)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mony_Send)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Money_Token)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Money_Token)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<br />
<h2>Deals</h2>
<div>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
        </tr>
        @foreach (var item in Model.Deal_Gamers)
        {
            <tr>
                <td>
                    @item.Deal.Name
                </td>
                <td>
                    @Html.ActionLink("Go To Deal", "Details", "Deals", new { @id = item.ID }, null)
                </td>
            </tr>
        }
    </table>
</div>