            </dd>

            <dt>
              @Html.DisplayNameFor(model => model.Android_URL)
            </dt>

            <dd>
                <a href="@Html.DisplayFor(model => model.Android_URL)" target="_blank">@Html.DisplayFor(model => model.Android_URL)</a> 
