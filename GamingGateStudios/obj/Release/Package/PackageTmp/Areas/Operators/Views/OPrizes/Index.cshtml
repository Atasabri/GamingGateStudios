@model IEnumerable<GamingGateStudios.Models.Prize>

@{
    ViewBag.Title = "Prizes";
    Layout = "~/Areas/Operators/Views/Shared/_Layout.cshtml";
}

<div style="width:90%; margin:0 auto;">
    <h2>Prizes</h2>
    <div class="graph">
        <div class="tables" style="align-items:center">

            <table class="table table-bordered">
                <thead>
                    <tr style="align-items:center">
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Points)</th>
                        <th>Photo</th>
                        <th>
                            Number Of Winners
                        </th>
                    </tr>
                </thead>
                <tbody style="align-items:center">
                    @{
                        int counter = 0;
                    }
                    @foreach (var item in Model)
                    {
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@Html.ActionLink(item.Name, "Details", new { id = item.ID })</td>
                            <td>@Html.DisplayFor(modelItem => item.Points)</td>
                            <td><img src="~/Uploads/Prizes/@(item.ID).jpg" alt="" width="60" height="60" /></td>
                            <td>
                                @item.Winners.Count
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>