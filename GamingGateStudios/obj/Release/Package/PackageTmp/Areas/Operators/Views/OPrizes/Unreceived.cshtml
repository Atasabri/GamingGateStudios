@model IEnumerable<GamingGateStudios.Models.Winner>

@{
    ViewBag.Title = "Unreceived";
    Layout = "~/Areas/Operators/Views/Shared/_Layout.cshtml";
}

<div style="width:90%; margin:0 auto;">
    <h2>@Model.Count() Un Received</h2>
    <div class="graph">
        <div class="tables" style="align-items:center">

            <table class="table table-bordered">
                <thead>
                    <tr style="align-items:center">
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Gamer.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Gamer.Phone)</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody style="align-items:center">
                    @{
                        int counter = 0;
                    }
                    @foreach (var item in Model)
                    {
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@Html.ActionLink(item.Gamer.UserName, "Details", "OGamers", new { id = item.Gamer_ID }, null)</td>
                            <td>@Html.DisplayFor(modelItem => item.Gamer.Phone)</td>
                            <td><img src="~/Uploads/Users/@(item.User_ID).jpg" alt="" width="60" height="60" /></td>
                      <td>
                          @using (Html.BeginForm("Win", "OPrizes", new { id = item.ID }, FormMethod.Post, null))
                          {
                            <input id="Submit1" type="submit" value="Arrived" onclick="return confirm('Are You Sure That Prize Arrived To User??');" />
                          }
                      </td>
                         </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
